# .env.production - Production Environment Configuration
# WARNING: This file should NEVER be committed to git
# Use environment variables or secret management system (AWS Secrets Manager, etc)

# Trading Configuration
MODE=PAPER
DEFAULT_SYMBOLS='["EURUSD","GBPUSD","USDJPY","USDCHF","AUDUSD"]'
DEFAULT_TIMEFRAME=M15
DEFAULT_RISK_PER_TRADE=1.0
DEFAULT_MAX_DAILY_LOSS=2.0
DEFAULT_MAX_POSITIONS=50

# MT5 Configuration - USE ENVIRONMENT VARIABLES IN PRODUCTION
MT5_LOGIN=${MT5_LOGIN}
MT5_PASSWORD=${MT5_PASSWORD}
MT5_SERVER=${MT5_SERVER}
MT5_PATH=/opt/MetaTrader5/terminal64.exe

# API Keys - USE SECRET MANAGER IN PRODUCTION
GEMINI_API_KEY=${GEMINI_API_KEY}
GEMINI_MODEL=gemini-2.5-flash-lite

NEWS_API_KEY=${NEWS_API_KEY}

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_TIMEOUT=30

# Logging - Verbose in production for debugging
LOG_LEVEL=INFO
LOG_FORMAT=JSON
LOG_OUTPUT=FILE,STDOUT

# Database
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=10
DATABASE_ECHO=false

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=60
ALERT_EMAIL=${ALERT_EMAIL}
SLACK_WEBHOOK=${SLACK_WEBHOOK}

# Risk Management
KILL_SWITCH_ENABLED=true
MAX_DAILY_LOSS_PCT=2.0
MAX_DRAWDOWN_PCT=5.0
MAX_CONCURRENT_TRADES=50
MIN_BALANCE_PERCENTAGE=20.0

# Trading Safety
PAPER_TRADING_MODE=true
REQUIRE_MANUAL_APPROVAL=false
TRADE_VERIFICATION=true

# Cloud Deployment (if applicable)
CLOUD_PROVIDER=AWS
CLOUD_REGION=us-east-1
CLOUD_BUCKET=${CLOUD_BUCKET}

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
